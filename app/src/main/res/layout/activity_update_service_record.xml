<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityUpdate">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/buttonBack"
        android:onClick="buttonBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Service Record RAW - Async"
        android:id="@+id/buttonUpdateServiceRecordService"
        android:onClick="buttonUpdateServiceRecordService"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewServiceRecord"
        android:layout_below="@+id/buttonUpdateServiceRecordService"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE SERVICE RECORD STATS - FBase"
        android:id="@+id/buttonUpdateServiceRecordStats"
        android:layout_below="@+id/buttonUpdateServiceRecordService"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonUpdateServiceRecordStats"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE LASTE GAMES RAW - ASYNC"
        android:id="@+id/buttonLastGamesRaw"
        android:layout_below="@+id/buttonUpdateServiceRecordStats"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonUpdateServiceRecordStats"
        android:onClick="buttonUpdateGamesRecordRaw"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE LAST GAMES STATS - FBASE"
        android:id="@+id/button"
        android:layout_below="@+id/buttonLastGamesRaw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonUpdateGamesRecordStats"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Games:"
        android:id="@+id/textViewLastGames"
        android:layout_below="@+id/textViewServiceRecord"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignBottom="@+id/textViewLastGames"
        android:layout_toEndOf="@+id/textViewLastGames"
        android:spinnerMode="dropdown"
        android:background="#c0c0c0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>



</RelativeLayout>
